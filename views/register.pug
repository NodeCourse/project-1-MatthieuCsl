html
    head
        title GamingBlog
        link(rel="stylesheet", href="/css/styles.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css")
        link(href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet")

    body
      nav
        .nav-wrapper
          a.brand-logo(href='/' style='padding-left:20px') GamingBlog
          ul#nav-mobile.right.hide-on-med-and-down
            if user
              li
                a(href='/lastReviews') Last review
              li
                a(href='/login') Create review
              li
                a(href='/logout') Log out
                
            else
            
              li
                a(href='/lastReviews') Last review
              li
                a(href='/register') Account
      main.container
            h4 Want to post your own game review?
            h5 Please sign-in or create a new account.
            .row
              div.col.s12.m6
                div.card.blue-grey.darken-1
                  div.card-content.white-text
                    h2.card-title Create an account
                        form(method="post", action="/api/user")
                          div
                            input#fullname(type='text', placeholder='fullname' name='fullname')
                          div.form-group
                            input#email.form-control(type='email', placeholder='name@email.com' name='email')
                          div.form-group
                            input#pw.form-control(type='password', placeholder='password' name='password')
                          div
                            button.waves-effect.waves-light.btn(type='submit') Sign up
              
              div.col.s12.m6
                div.card.blue-grey.darken-1
                  div.card-content.white-text
                    h2.card-title Already registered?
                        form(method="post", action="/homepage")
                          div.form-group
                            input#email.form-control(type='email', placeholder='name@email.com' name='username')
                          div.form-group
                            input#pw.form-control(type='password', placeholder='password' name='password')
                          div
                            p Forgot your email/username or password?
                          div
                            button.waves-effect.waves-light.btn(type='submit') Sign in
